#include "config.h"
#include "pic18f4520.h"
#include "ssd.h"
#include "keypad.h"

void main(void) {
    int x = 0, y = 0, z;
    unsigned char tecla;
    ssdInit();
    kpInit();
    for (;;) {
        ssdUpdate();
        kpDebounce();
        tecla = kpRead();
        
        if (tecla != 0 && z == 0) {
            x += 1;
        }
        
        if (x > 9) {
            x = 0;
            y += 1;
        }

        if (y > 9){
            y = 0;
        }
        ssdDigit(x, 0);
        ssdDigit(y, 1);
        
        if (tecla == 0){
            z = 0;
        }
        else {
            z = 1;
        }
    }
}
